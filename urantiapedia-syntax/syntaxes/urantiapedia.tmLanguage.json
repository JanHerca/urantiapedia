{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Urantiapedia",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#links"
		},
		{
			"include": "#entries"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.urantiapedia",
					"match": "^<.*$"
				}
			]
		},
		"links": {
			"patterns": [
				{
					"name": "link.line.urantiapedia",
					"match": "^>.*$"
				}
			]
		},
		"entries": {
			"patterns": [
				{
					"begin": "^(?=\\s*\\S)",
					"end": "$",
					"patterns": [
						{
							"name": "entity.name.item1.urantiapedia",
							"match": "^[^|]+(?=\\|)"
						},
						{
							"name": "entity.name.item2.urantiapedia",
							"match": "\\(\\d+[:.,\\d-]*\\)(?:\\s+\\(\\d+[:.,\\d-]*\\))*"
						},
						{
							"name": "entity.name.item3.urantiapedia",
							"match": "(?<=\\|)\\s*(?!\\b(PERSON|PLACE|ORDER|RELIGION)\\b)[^|()\\s][^|()]*[^|()\\s]\\s*(?=\\|)"
						},
						{
							"name": "entity.name.item4.urantiapedia",
							"match": "(?<=\\|)\\s*\\b(PERSON|PLACE|ORDER|RELIGION)\\b\\s*(?=\\|)"
						},
						{
							"name": "entity.name.item5.urantiapedia",
							"match": "(?<=\\|)[^|]+$"

						}
					]
				}
			]
		}
	},
	"scopeName": "source.urantiapedia"
}